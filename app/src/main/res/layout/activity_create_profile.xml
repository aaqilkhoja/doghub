    <Button
        android:id="@+id/char1_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corner"
        android:text="char1"
        app:layout_constraintEnd_toStartOf="@+id/char2"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="564dp" />


    <Button
        android:id="@+id/char2_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/rounded_corner"
        android:text="Char 2"
        app:layout_constraintEnd_toStartOf="@+id/char3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="564dp" />

    <Button
        android:id="@+id/char3_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/rounded_corner"
        android:text="Char 3"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="564dp"


        />


    <Button
        android:id="@+id/char4_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/rounded_corner"
        android:text="Char 4"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="564dp" />

    <Button
        android:id="@+id/char5_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/rounded_corner"
        android:text="Char 5"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="564dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Profile"
        android:textColor="#280b45"
        android:background="#cd9575"
        android:textSize="20dp"
        android:id="@+id/btn_cp" />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:id="@+id/progressbar_cp" />

</LinearLayout>





