    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/et_name_cp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="4dp"
        android:background="@android:color/white"
        android:textColorHint="@color/grey"
        android:textColor="#280b45" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dogs Name"
        android:id="@+id/et_dog_name_cp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="4dp"
        android:background="@android:color/white"
        android:textColorHint="@color/grey"
        android:textColor="#280b45" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dog Breed"
        android:id="@+id/et_breed_cp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="4dp"
        android:background="@android:color/white"
        android:textColorHint="@color/grey"
        android:textColor="#280b45" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dog's Age"
        android:id="@+id/et_dog_age_cp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="4dp"
        android:background="@android:color/white"
        android:textColorHint="@color/grey"
        android:textColor="#280b45" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bio"
        android:id="@+id/et_bio_cp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="4dp"
        android:background="@android:color/white"
        android:textColorHint="@color/grey"
        android:textColor="#280b45" />


    <!--[CDATA[


